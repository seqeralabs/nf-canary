nextflow_process {

    name "Test Process TEST_INPUT"
    script "main.nf"
    process "TEST_INPUT"

    test("TEST_INPUT") {

        when {
            process {
                """
                input[0] = Channel.of("alpha").collectFile(name: 'sample.txt', newLine: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
